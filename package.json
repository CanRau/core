{
  "name": "@logux/core",
  "version": "0.3.0",
  "description": "Logux core components",
  "keywords": [
    "logux",
    "core",
    "connection",
    "websocket",
    "crdt",
    "event sourcing",
    "distributed systems"
  ],
  "scripts": {
    "api": "documentation build *.js -f md -o api.md",
    "spell": "yarn api && yaspeller-ci *.md",
    "clean": "rimraf api.md coverage/",
    "lint": "eslint-ci *.js messages/*.js test/{**/,}*.js",
    "test": "jest --coverage && yarn lint && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/core",
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "nanoevents": "^2.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.2.1",
    "clean-publish": "^1.1.2",
    "documentation": "^11.0.0",
    "eslint": "^5.16.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "nanodelay": "^0.1.4",
    "rimraf": "^2.6.3",
    "ws": "^7.0.0",
    "yaspeller-ci": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      "\\(by [^ )]+( [^ )]+)*\\)"
    ],
    "dictionary": [
      "authCallback",
      "BaseNode",
      "byId",
      "changeMeta",
      "eachStoreCheck",
      "errorListener",
      "generateId",
      "getLastAdded",
      "getLastSynced",
      "getLog",
      "GraphQL",
      "isFirstOlder",
      "js",
      "lastId",
      "lastReceived",
      "lastSent",
      "LastSynced",
      "leftEvents",
      "leftNode",
      "leftSent",
      "localNodeId",
      "LocalPair",
      "localProtocol",
      "Logux",
      "logux",
      "LoguxError",
      "Loopback",
      "loopback",
      "MemoryStore",
      "minProtocol",
      "nanoevents",
      "nextLog",
      "nodeId",
      "nodeId on",
      "reconnectable",
      "remoteNodeId",
      "remoteProtocol",
      "remoteSubprotocol",
      "removeReason",
      "rightEvents",
      "rightNode",
      "rightSent",
      "SemVer",
      "ServerConnection",
      "setLastSynced",
      "subprotocol",
      "TestLog",
      "TestPair",
      "TestTime",
      "unsubscribe",
      "Versioning",
      "waitFor",
      "WebSocket",
      "WsConnection"
    ]
  }
}
